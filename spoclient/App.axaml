<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		     xmlns:sty="using:FluentAvalonia.Styling"
             x:Class="spoclient.App"
             xmlns:local="using:spoclient"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceInclude Source="/Styling/Resources.axaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Application.Resources>

	<Application.DataTemplates>
    </Application.DataTemplates>
  
    <Application.Styles>
		<sty:FluentAvaloniaTheme PreferSystemTheme="True" PreferUserAccentColor="True" />
		<StyleInclude Source="/Styling/ControlsGalleryStyles.axaml" />
	</Application.Styles>
	
</Application>